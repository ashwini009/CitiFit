<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chosen_goal_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cititmobilechallenge.citifit.activity.ChosenGoalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chosen_goal_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:contentDescription="@string/reward_image"
            android:src="@drawable/product6" />

        <TextView
            android:id="@+id/text_goal_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/goal_days"
            android:textColor="@color/purple"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/text_goal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:tag="@string/content"
            android:text="@string/goal_name"
            android:textColor="@color/purple"
            android:textSize="16sp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_circular_corner"
            android:onClick="onBeginBtnClicked"
            android:tag="@string/subtitle"
            android:text="@string/yes_begin_now"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
